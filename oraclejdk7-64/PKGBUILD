# Maintainer: Damian Nowak <damian.nowak@atlashost.eu>

_major='7'
_minor='17'
_bit='64'
pkgname="oraclejdk${_major}-${_bit}"
pkgver="${_major}u${_minor}"
pkgrel='2'
epoch=
pkgdesc="Oracle JDK ${_major}"
arch=('x86_64')
url='http://www.oracle.com/technetwork/java/javase/downloads/jdk7-downloads-1880260.html'
license=('unknown')
groups=()
depends=('glibc' 'libjpeg-turbo' 'lcms2' 'nss' 'ca-certificates-java')
makedepends=()
checkdepends=()
optdepends=()
provides=("java-environment=${_major}" "java-runtime=${_major}" "java-runtime-headless=${_major}" "java-web-start=${_major}")
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://shur.atlashost.eu/files/jdk-$pkgver-linux-${_bit}.tar.gz")
noextract=()
md5sums=('d9b5870a94c47efa0282d6c1863d0667')

build() {
  zip="jdk-$pkgver-linux-${_bit}.tar.gz"
  cd "$srcdir"
  tar -xf "jdk-$pkgver-linux-${_bit}.tar.gz"
  rm "../$zip"
  mkdir -p 'opt/java'
  mv "jdk1.7.0_${_minor}" "$pkgname"
  mv "$pkgname" 'opt/java'
  mv 'opt' "$pkgdir"
  chown -R root:root "$pkgdir"

  cd "$pkgdir"
  mkdir -p 'etc/conf.d'
  echo "JAVA_HOME=\"/opt/java/$pkgname\"" > "etc/conf.d/$pkgname"
}
